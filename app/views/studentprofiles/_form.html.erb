<div class="row profile-container">
	Student's profile
  <div class="col-md-6 col-md-offset-3 profile-form">
	<%= form_for @studentprofile, url: studentprofile_path, html: { multipart: true } do |f| %>
	
	<%= f.text_field :fname, placeholder: "First Name" %>

	<%= f.text_field :lname, placeholder: "Last Name" %></br>

	<%= f.text_field :university, placeholder: "University / College"%></br>

	<%= f.text_field :bio, placeholder: "Brief description about yourself" %> </br>
	
	<%= f.text_field :phone, placeholder: "Phone" %> </br>

	<%= f.text_field :planguage, placeholder: "Primary Language" %></br>

	<%= f.text_field :slanguage, placeholder: "Secondary Language" %></br>

	<%= f.text_field :smoker, placeholder: "Smoker / Non-smoker" %></br>

	<%= f.text_field :allergies, placeholder: "Known Allergies" %></br>

	<%= f.text_field :all_desc, placeholder: "Allergy Description" %></br>
	<div class=" profile-select-box">
	<%= f.date_field :startduration, placeholder: "from" %> </br>
	</div>
	<div class=" profile-select-box">
	<%= f.date_field :endduration, placeholder: "to" %>
	</div>
	<div class=" profile-select-box">
	<%= f.file_field :image, placeholder: "Select your image" %>
	</div></br>


	<%= f.submit :submit, :class=> 'profile-submit-btn'%>

	<% end %>
  </div>
</div>